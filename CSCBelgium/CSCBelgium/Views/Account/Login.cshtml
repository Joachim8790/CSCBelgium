@using CSCBelgium.Models
@model LoginViewModel
@{
    ViewBag.ReturnUrl = "/Configuratiepaneel/Index";
    ViewBag.Title = "Log in";
}

<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            <div class="contactform">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    <h4>Log in op het configuratiepaneel</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="input-field col s12 form">
                            <i class="material-icons prefix">account_box</i>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "txtEmail" })
                            @Html.LabelFor(m => m.Email, new { @for = "txtEmail" })

                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12 form">
                            <i class="material-icons prefix">lock_outline</i>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "txtPassword" })
                            @Html.LabelFor(m => m.Password, new { @for = "txtPassword" })


                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 form">
                            <input type="submit" value="Log in" class="btn btn-default" />
                        </div>
                    </div>

                    @* Enable this once you have account confirmation enabled for password reset functionality
                <p>
                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                </p>*@
                }
            </div>
</section>
    </div>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}