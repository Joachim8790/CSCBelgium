@model CSCBelgium.ViewModels.RimsViewModel
    @{
        tblRimsService service = new tblRimsService();
 }
@using CSCBelgium.Service;
<div class="main" style="margin:0;padding:0;">
    <br />
    <h4>Velgen</h4>
    <div class="row" id="cars">

        @foreach (var rim in Model.rims)
            {
            <div class="col-lg-3 col-md-4 col-sm-6" style="padding:10px">
                <div class="card car">
                   @if (service.isSold(rim))
                   {
                    <a href="#">
                        <div class="card-image waves-effect waves-block waves-light" style="height:250px;width:100%;background:url(data:image;base64,@System.Convert.ToBase64String(Model.images.Where(a => a.RimID == rim.RimID).FirstOrDefault().Image)) no-repeat center center ;-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;">
                            @*<img alt="" class="activator" src="data:image;base64,@System.Convert.ToBase64String(post.PostImage)" />*@
                        </div>
                    </a>
                   }
                   else
                   {
                    <a href="@Url.Action("RimDetails","Home",new { rimID = rim.RimID })">
                        <div class="card-image waves-effect waves-block waves-light" style="height:250px;width:100%;background:url(data:image;base64,@System.Convert.ToBase64String(Model.images.Where(a => a.RimID == rim.RimID).FirstOrDefault().Image)) no-repeat center center ;-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;">
                            @*<img alt="" class="activator" src="data:image;base64,@System.Convert.ToBase64String(post.PostImage)" />*@
                        </div>
                    </a>
                   }

                    <div class="card-content">
                        @if (service.isSold(rim))
                        {
                            <span style="font-size: 1.1rem;" class="card-title activator grey-text text-darken-4">@rim.tblRimBrands.RimBrandName @rim.RimModel<br /><b style="color:rgb(255,51,51)">Verkocht</b></span>
                        }
                        else
                        {
                            <span style="font-size: 1.1rem;" class="card-title activator grey-text text-darken-4">@rim.tblRimBrands.RimBrandName @rim.RimModel<br /><b>@rim.RimPrice.ToString("€#,##0")</b></span>
                        }
                        


                    </div>

                </div>
            </div>
        }

    </div>




</div>
