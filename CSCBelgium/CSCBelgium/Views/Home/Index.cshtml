@using CSCBelgium.Views.Configuratiepaneel.CustomCode;
<div class="slider custom" style="height:550px;">
    <ul class="slides" style="height:550px;">
        @for (int i = 0; i < Model.slides.Count(); i++)
        {
            if (Model.slides.ElementAt(i).CaptionAlignment == Uitlijning.Links.ToString())
            {
                <li>

                    <img src="data:image;base64,@System.Convert.ToBase64String(Model.slides.Select(a => a.SlideImage).ElementAt(i))"/> <!-- random image -->
                    <div class="caption left-align">
                        <h3>@Model.slides.ElementAt(i).CaptionText</h3>
                    </div>
                </li>
            }
            else
            {
                if (Model.slides.ElementAt(i).CaptionAlignment == Uitlijning.Midden.ToString())
                {
                    <li>

                        <img src="data:image;base64,@System.Convert.ToBase64String(Model.slides.Select(a => a.SlideImage).ElementAt(i))" /> <!-- random image -->
                        <div class="caption center-align">
                            <h3>@Model.slides.ElementAt(i).CaptionText</h3>
                        </div>
                    </li>
                }
                else
                {
                    <li>

                        <img src="data:image;base64,@System.Convert.ToBase64String(Model.slides.Select(a => a.SlideImage).ElementAt(i))" /> <!-- random image -->
                        <div class="caption right-align">
                            <h3>@Model.slides.ElementAt(i).CaptionText</h3>
                        </div>
                    </li>
                }
            }

        }
    </ul>
    <nav id="nav-arrows" class="nav-arrows">
        <span class="nav-arrow-prev">Previous</span>
        <span class="nav-arrow-next">Next</span>
    </nav>
</div>

