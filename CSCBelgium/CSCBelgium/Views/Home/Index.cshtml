<div class="black_region">
    <div class="contactform">
@using (Html.BeginForm("Index", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">

        <div class="col-md-12">
            <h3>Wenst u een afspraak</h3>
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12 form">
                        <i class="material-icons prefix">account_circle</i>
                        
                         
                                @Html.LabelFor(m => m.name, new { @for = "txtname" })
                                @Html.TextBoxFor(m => m.name, new { @class = "validate data-required", id = "txtname" })


                           
                        </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 form">
                        <i class="material-icons prefix">email</i>


                        @Html.LabelFor(m => m.emailaddress, new { @for = "txtemailaddress",@class="data-errorEMAIL" })
                        @Html.TextBoxFor(m => m.emailaddress, new { @class = "validate data-required", @type="email" , id = "txtemailaddress" })



                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12 form">
                        <i class="material-icons prefix">create</i>


                        @Html.LabelFor(m => m.subject, new { @for = "txtsubject" })
                        @Html.TextBoxFor(m => m.subject, new { @class = "validate data-required", id = "txtsubject" })



                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 form">
                        <i class="material-icons prefix">message</i>


                        @Html.LabelFor(m => m.message, new { @for = "txtmessage" })
                        @Html.TextAreaFor(m => m.message, new { @class = "materialize-textarea data-required", id = "txtmessage" })



                    </div>
                </div>
                <div class="row" style="text-align:center;">
                    <button class="waves-effect waves-light btn" type="submit"><i class="material-icons left">send</i>Verzenden</button>
                </div>
            </form>
        </div>

        </div>
}
    </div>
</div>
<div class="white_region">
    <h3>News & Events</h3>
    <div class="row" id="posts">
        
            @foreach (var post in Model.posts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card post">
                        <div class="card-image waves-effect waves-block waves-light" style="height:250px;width:100%;background:url(data:image;base64,@System.Convert.ToBase64String(post.PostImage)) no-repeat center center ;-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;">
                            @*<img alt="" class="activator" src="data:image;base64,@System.Convert.ToBase64String(post.PostImage)" />*@
                        </div>
                        <div class="card-content">
                            <span class="card-title activator grey-text text-darken-4">@post.PostTitle.ToString()</span>
                           
                        </div>
                        <div class="card-reveal">
                         
                            <span class="card-title grey-text text-darken-4">@post.PostTitle.ToString()<i class="material-icons right">close</i></span>
                            <p>@post.PostDescription.ToString()</p>
                        </div>
                    </div>
                </div>
            }
               
    </div>
</div>
