@model CSCBelgium.ViewModels.AddPostViewModel
@{
    ViewBag.Title = "AddPost";
    ViewBag.ReturnUrl = "Configuratiepaneel/EditPosts";
    Layout = "~/Views/Shared/_LayoutConfiguratiepaneel.cshtml";
}
<nav style="height:90px;">
    <div class="nav-wrapper">
        <a style="float:right;" href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>
        <ul id="nav-mobile" class="left"></ul>

    </div>
</nav>
<div class="main">
    <h4>Een nieuwsbericht toevoegen</h4>

    <div class="row">
        <div class="col-md-12">
            <section id="loginForm">
                <div class="contactform">
                    @using (Html.BeginForm("AddPost", "Configuratiepaneel", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" , enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="input-field col s12 form">
                                @Html.LabelFor(m => m.post.PostTitle, new {@for = "txtPostTitle" })
                                @Html.TextBoxFor(m => m.post.PostTitle, new { @class = "validate", id = "txtPostTitle" })


                            </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12 form">
                                    @Html.LabelFor(m => m.post.PostDescription, new { @for = "txtPostDescription" })
                                    @Html.TextBoxFor(m => m.post.PostDescription, new { @class = "validate", id = "txtPostDescription" })


                                </div>
                            </div>
                            <div class="row">
                               
                                    <div class="input-field col s12 form">
                                        <div class="field">
                                            <div class="file-field input-field">
                                                <div class="btn">
                                                    <span>Afbeelding</span>
                                                    <input type="file" name="txtAfbeelding" id="txtAfbeelding" accept="image/*">
                                                </div>
                                                <div class="file-path-wrapper">
                                                    <input class="file-path validate" type="text">
                                                </div>
                                            </div>

                                        </div>


                                    </div>

</div>
                            <div class="row">
                                <div class="input-field col s12 form">
                                    <input type="submit" value="Aanmaken" class="btn btn-default" />


                                </div>
                            </div>
                        

                       
                    }
                </div>
            </section>
        </div>

    </div>

</div>