@import 'nib'
_base = #c30eb8
// _base = #0ca462
_pattern = 'img/food.png';
_fc = lighten(black, 25%)
img_width = 150px

body,
html,
.wrapper
	height 100%
	width 100%

body
	font-family 'Open Sans', sans-serif
	color _fc


.wrapper
	background linear-gradient(left bottom, darken(_base, 50%), _base)
	position relative
	z-index 1
	&:before
		content ''
		position absolute
		top 0
		left 0
		height 100%
		width 100%
		background-image url(_pattern)
		z-index 2
		opacity 0.3

.wrapper-inner
	position relative
	z-index 3
	height 100%

.box-wrapper
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	margin-top 40px
	z-index 1

.box
	position relative
	border-radius 8px
	box-shadow 0 4px 1px fade-out(black, 90%)
	width 380px
	// height 450px
	background white
	text-align center
	box-sizing border-box
	padding-top img_width - 85
	// padding-bottom 65px

.box-inner
	// box-sizing border-box
	padding 30px

.avatar
	// text-align center
	// margin-top -90px
	border-radius 50%
	box-shadow 0 0 0 3px _base \, 0 0 0 8px white
	// display table
	// margin -80px auto 0 auto
	// margin-bottom 20px
	top -(img_width/2)
	margin-left -(img_width/2)
	left 50%
	// display table
	position absolute
	img
		width img_width
		border-radius 50%
		display block

h1,h2,h3,h4,h5
	font-family 'Open Sans', sans-serif
	font-weight 300
	margin-top 0
	margin-bottom 15px

.name,
.followers-title
	font-size 38px
	font-weight 100
	font-family 'Roboto', sans-serif
	margin-bottom 2px
	// margin-bottom 0
	color darken(_fc, 10%)

.occupation
	font-size 18px
	font-style italic
	color lighten(_fc, 25%)
	// border-bottom 1px solid darken(white, 5%)
	// padding-bottom 15px
	// margin-bottom 15px
	margin-bottom 2px

.location
	color lighten(_fc, 60%)
	font-size 14px
	margin-top 5px
	margin-bottom 15px
	padding-bottom 15px
	border-bottom 1px solid darken(white, 5%)
	.fa
		color lighten(_fc, 70%)
		margin-right 4px

.followers-title
	font-size 30px
	color lighten(_fc, 20%)
	margin-bottom 5px

.followers-list
	list-style none
	margin 0
	padding 0
	overflow hidden
	padding-bottom 5px
	display table
	margin 0 auto
	> li
		// display inline-block
		display block
		float left
		margin 0 5px
		a
			display block
			border-radius 50%
			// background _base
			transition 0.3s
			height 45px
			width 45px
			text-decoration none
			img
				border-radius 50%
				width 45px
				display block
				transition 0.3s
				backface-visibility hidden
				height 45px
			&:hover
				img
					opacity 0.8
		&.follow-list-item
			a
				background lighten(black, 30%)
				color white
				&:hover
					background _base
			.fa-plus
				display block
				height 45px
				width 45px
				line-height 45px


.social-list
	list-style none
	margin 0
	padding 0
	// position absolute
	// bottom 0
	// left 0
	overflow hidden
	// display table
	// margin 0 auto
	// bottom 0
	padding-top 1px
	display table
	margin 0 auto
	> li
		// display inline-block
		float left
		display block
		> a
			display block
			width 45px
			height 55px
			line-height 55px
			font-size 28px
			text-decoration none
			color lighten(_fc, 60%)
			border-right 1px solid darken(white, 7%)
			transition 0.2s
			&:hover
				background _base
				color white
				&.fa-facebook
					background #3B5998
				&.fa-dribbble
					background #C32361
				&.fa-twitter
					background #55ACEE
				&.fa-pinterest
					background #CD2129
				&.fa-linkedin
					background #1683BC
		&:last-child > a
			border-right none